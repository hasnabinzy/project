const express = require('express');        
const app = express();                     
const port = 3000;                        

// Define a route for the root URL '/'
app.get('/', (req, res) => {
    res.send('Hello from Node.js Application!');  
});

// Start the server and listen on port 3000 on all interfaces
app.listen(port, '0.0.0.0', () => {
    console.log(`App listening at http://0.0.0.0:3000`);
});
