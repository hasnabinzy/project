- name: Install Apache
  dnf:
    name: "{{app}}"
    state: present

- name: Start and enable Apache
  service:
    name: "{{app}}"
    enabled: yes
    state: started
  when: ansible_facts['distribution'] == 'RedHat'

- name: Create directories for site1
  file:
    path: /var/www/site1
    state: directory
    mode: '0755'

- name: Create directories for site2
  file:
    path: /var/www/site2
    state: directory
    mode: '0755'

- name: Add a simple welcome page for site1
  copy:
    dest: /var/www/site1/index.html
    content: "welcome to site1"
    mode: '0644'

- name: Add a simple welcome page for site2
  copy:
    dest: /var/www/site2/index.html
    content: "welcome to site2"
    mode: '0644'

- name: Create virtual host configuration for  site1
  template:
    src: "{{item}}"
    dest: "/etc/httpd/conf.d/{{item}}.conf"
  notify: Restart
  loop:
     - site1.conf.j2
     - site2.conf.j2

- name: Open HTTP port in firewall
  firewalld:
    service: "{{item}}"
    permanent: yes
    state: enabled
  loop:
     - http
     - https
  notify: Reload firewall
  
- name: Reload firewall
  shell: firewall-cmd --reload
  notify: Reload firewall
                           
